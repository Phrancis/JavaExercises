/*
 * This is an example of a simple class which encapsulates two variables
 * and uses a constructor to build the SubtractOperation object.
 */

class SubtractOperation {
  	private final double input;
  	private final double difference;
  	
  	// constructor sets private variables based on two parameters
  	SubtractOperation(double input, double difference) {
    		this.input = input;
    		this.difference = difference;
  	}
	
  	// method that is accessed publically by main
  	public double getResult() {
  		  return input - difference;
  	}
}

class TestSubtractOperation {
  	public static void main(String[] args) {
    		double input = 1500.368;
    		double difference = 500.114;
    		// Instantiate the class and pass values to the constructor
    		SubtractOperation subtract = new SubtractOperation(input, difference);
    		
    		System.out.println("Input: " + input);
    		System.out.println("Difference: " + difference);
    		System.out.println("Result: " + subtract.getResult());
  	}
}
